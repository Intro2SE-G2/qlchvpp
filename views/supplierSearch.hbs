<div class="row">
    {{#each Supplier}}
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Mã nhà cung cấp:</p>
                            <p>Tên nhà cung cấp:</p>
                            <p>Địa chỉ nhà cung cấp:</p>

                            <a href="/suppliers/{{MaNhaCungCap}}" class="btn btn-primary" role="button">-></a>

                        </div>
                        <div class="col-sm-6">
                            <p>{{MaNhaCungCap}}</p>
                            <p>{{TenNhaCungCap}}</p>
                            <p>{{DiaChi}}</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="card-footer text-muted position-fixed rounded-pill bottom-0 right-0 mb-7 mr-5 p-0">
    <a class="btn btn-outline-success btn-pill " href="/suppliers/supplierNew" role="button">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Thêm mới
    </a>
</div>


<div class="row">
<div class="col-sm-2">
    <form>
        <input name="page" value="{{CurrentPage}}" readonly type="hidden">
        <label for="itemperpage">Số lượng hiển thị:</label>
    <select  name="itemperpage" onchange="this.form.submit()">
        <option {{#DisplayPage itemperpage '==' 5}} selected{{/DisplayPage}} value="5">5</option>
        <option  {{#DisplayPage itemperpage '==' 10}} selected{{/DisplayPage}} value="10">10</option>
        <option  {{#DisplayPage itemperpage '==' 20}} selected{{/DisplayPage}} value="20">20</option>
    </select>

    </form>

</div>

    <div class="row mt-2">
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item {{#if CanRenderBack}} disabled {{/if}}"  >
            <a class="page-link" href="/suppliers/search?page={{PreviousPage}}&itemperpage={{itemperpage}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Trang trước</span>
            </a>
        </li>

        <li class="page-item"><a class="page-link" {{#if CanRenderBackBack}} hidden{{/if}} href="/suppliers/search?page={{PreviousPreviousPage}}&itemperpage={{itemperpage}}">{{PreviousPreviousPage}}</a></li>
        <li class="page-item"><a class="page-link"  {{#if CanRenderBack}} hidden{{/if}} href="/suppliers/search?page={{PreviousPage}}&itemperpage={{itemperpage}}">{{PreviousPage}}</a></li>
        <li class="page-item active"><a class="page-link"  href="/suppliers/search?page={{CurrentPage}}&itemperpage={{itemperpage}}">{{CurrentPage}}</a></li>
        <li class="page-item"><a class="page-link"  {{#if CanRenderNext}} hidden{{/if}}  href="/suppliers/search?page={{NextPage}}&itemperpage={{itemperpage}}">{{NextPage}}</a></li>
        <li class="page-item"><a class="page-link"  {{#if CanRenderNextNext}} hidden{{/if}} href="/suppliers/search?page={{NextNextPage}}&itemperpage={{itemperpage}}">{{NextNextPage}}</a></li>
        <li class="page-item {{#if CanRenderNext}} disabled {{/if}}" >
            <a class="page-link" href="/suppliers/search?page={{NextPage}}&itemperpage={{itemperpage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Trang sau</span>
            </a>
        </li>
    </ul>
</nav>
    </div>
</div>

    
