<h1>Quản lý nhập kho</h1>
<div class="card">
    <h5 class="card-header d-flex justify-content-between">
        <div class="input-group justify-content-end">
            <input type="text" placeholder="Tìm kiếm">
            <a class="btn btn-outline-primary" href="#" role="button">
                <i class="fa fa-search" aria-hidden="true"></i>
            </a>
        </div>
    </h5>
    <h4 class="card-header d-flex justify-content-end">
        <select class="custom-select" id="inputInventoriesSelectProvider" style="margin-right: 15px;">
            <option selected>Nhà cung cấp</option>
            <option value="1">---------</option>

        </select>
        <select class="custom-select" id="inputInventoriesSelectTime" style="margin-right: 15px;">
            <option selected>Thời gian</option>
            <option value="1">Tăng dần</option>
            <option value="2">Giảm dần</option>
            <option value="3">--------</option>
        </select>
        <select class="custom-select" id="inputInventoriesSelectProduceStatus" style="margin-right: 15px;">
            <option selected>Tình trạng</option>
            <option value="1">Đã thanh toán</option>
            <option value="2">Ghi nợ</option>
            <option value="3">--------</option>
        </select>
        <select class="custom-select" id="inputInventoriesSelectSort" style="margin-right: 15px;">
            <option selected>Sắp xếp</option>
            <option value="1">Thời gian</option>
            <option value="2">Giá trị</option>
            <option value="3">A - Z</option>
            <option value="4">--------</option>
        </select>
    </h4>
    {{#if this.empty}}
        <div class="card-body">
            <p class="card-text">Không có dữ liệu.</p>
        </div>
    {{else}}
        <div class="card-body">
            <div class="row">
                <!--Test-->
                <div class="col-xs-12 col-lg-6 ">
                    <div class="card border-left border-bottom border-right border-top">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-5 text-truncate">
                                    <p class="card-text">Mã đơn:</p>
                                    <p class="card-text">Thời gian lập:</p>
                                    <p class="card-text">Mã nhà cung cấp:</p>
                                    <p class="card-text">Tên nhà cung cấp:</p>
                                    <p class="card-text">Tổng tiền:</p>
                                    <p class="card-text">Tình trạng:</p>
                                </div>
                                <div class="col-7 text-truncate">
                                    <p class="card-text">NK0001</p>
                                    <p class="card-text">01/01/2021</p>
                                    <p class="card-text">NCC0001</p>
                                    <p class="card-text text-truncate">Thiên An</p>
                                    <p class="card-text text-truncate">1.000.000đ</p>
                                    <p class="card-text">Đã thanh toán</p>

                                </div>

                            </div>
                            <a href="/receipts/id" class="btn btn-success rounded-pill pr-4 pl-4 mt-2" role="link">-></a>
                        </div>
                    </div>
                </div>
                <!--End test-->
                {{#each this.inventories}}
                {{!-- <div class="row"> --}}
                    <div class="col-xs-12 col-lg-6 ">
                        <div class="card border-left border-bottom border-right border-top">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-5 text-truncate">
                                        <p class="card-text">Mã đơn:</p>
                                        <p class="card-text">Thời gian lập:</p>
                                        <p class="card-text">Mã nhà cung cấp:</p>
                                        <p class="card-text">Tên nhà cung cấp:</p>
                                        <p class="card-text">Tổng tiền:</p>
                                        <p class="card-text">Tình trạng:</p>
                                    </div>
                                    <div class="col-7 text-truncate">
                                        <p class="card-text">NK0001</p>
                                        <p class="card-text">01/01/2021</p>
                                        <p class="card-text">NCC0001</p>
                                        <p class="card-text text-truncate">Thiên An</p>
                                        <p class="card-text text-truncate">1.000.000đ</p>
                                        <p class="card-text">Đã thanh toán</p>

                                    </div>

                                </div>
                                <a href="/receipts/id" class="btn btn-success rounded-pill pr-4 pl-4 mt-2" role="link">-></a>
                            </div>
                        </div>
                    </div>
                {{!-- </div> --}}
                {{/each}}
            </div>
        </div>
    {{/if}}
    <div class="card-footer text-muted">
        <a class="btn btn-outline-success float-right" href="/receiptNew" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Tạo phiếu nhập kho
        </a>
    </div>
</div>
